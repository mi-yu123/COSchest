<div class="min-h-screen bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    <!-- 記事詳細 -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="p-6">
        <h1 class="text-3xl font-semibold text-gray-800 mb-4">
          <%= @article.title %>
        </h1>

        <div class="text-sm text-gray-500 mb-4">
          <%= @article.created_at.strftime("%Y年%m月%d日") %> に投稿
        </div>

        <div class="text-gray-800 text-lg">
          <%= @article.content %>
        </div>

        <!-- 編集・削除ボタン -->
        <% if user_signed_in? && @article.user == current_user %>
          <div class="mt-6">
            <%= link_to "編集", edit_article_path(@article), class: "bg-yellow-500 text-white py-2 px-4 rounded-lg shadow-lg hover:bg-yellow-600 transition duration-300" %>
            <%= link_to '削除', article_path(@article), 
            data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' },
            class: "inline-block px-6 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 transitionduration-300" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
