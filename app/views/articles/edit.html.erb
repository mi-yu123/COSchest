<div class="min-h-screen bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-semibold text-center mb-8">記事を編集</h1>

    <%= form_with(model: @article) do |form| %>
      <% if @article.errors.any? %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
          <strong>エラーが発生しました:</strong>
          <ul class="list-disc pl-6">
            <% @article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6">
        <%= form.label :title, class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", value: @article.title %>
      </div>

      <div class="mb-6">
        <%= form.label :content, class: "block text-gray-700 font-medium mb-2" %>
        <%= form.rich_text_area :content, class: "w-full h-72 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" do %>
          <%= @article.content %>
        <% end %>
      </div>

      <div class="mb-6 text-center">
        <%= form.submit "更新", class: "bg-blue-600 text-white py-2 px-6 rounded-lg shadow-lg hover:bg-blue-700 transition duration-300" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "キャンセル", @article, class: "text-gray-600 hover:text-blue-600 transition duration-300" %>
    </div>
  </div>
</div>
