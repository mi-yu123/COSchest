<div class="max-w-lg mx-auto p-6 bg-white rounded-lg shadow-lg">
  <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">ユーザー登録</h2>

  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-500 text-red-700 p-4 mb-4 rounded">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email, 'メールアドレス', class: 'block text-sm font-medium text-gray-700' %>
      <%= f.email_field :email, class: 'mt-1 p-3 w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="mb-4">
      <%= f.label :password, 'パスワード', class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password, class: 'mt-1 p-3 w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, 'パスワード確認', class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password_confirmation, class: 'mt-1 p-3 w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="mb-4">
      <%= f.submit '登録', class: 'w-full p-3 bg-blue-600 text-white font-semibold rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
  <% end %>

    <div class="mt-4 text-center">
      <a href="<%= new_login_path %>" class="text-sm text-blue-600 hover:underline">既にアカウントをお持ちの方はこちら</a>
    </div>
</div>
