<div class="min-h-screen bg-white pb-24">
  <div class="max-w-2xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-semibold text-center mb-8 text-blue-400">ウィッグの登録</h1>

    <%= form_with model: @wig, local: true, class: "space-y-6", data: { turbo: false } do |form| %>
      <div class="bg-white p-8 rounded-2xl shadow-lg border border-blue-100">
        <!-- 画像アップロード -->
        <div class="mb-8">
          <%= form.label :image, "画像", class: "wig-form-label" %>
          <div class="flex items-center justify-center w-full">
            <label class="w-full flex flex-col items-center px-4 py-6 bg-blue-50 text-blue-500 rounded-lg border-2 border-blue-200 border-dashed cursor-pointer hover:bg-blue-100 transition-colors duration-300">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="mt-2 text-sm">クリックして画像を選択</span>
              <%= form.file_field :image, class: "hidden", accept: "image/*" %>
            </label>
          </div>
        </div>

        <!-- キャラクター名 -->
        <div class="mb-8">
          <%= form.label :character_name, "キャラクター名", class: "block text-gray-700 font-medium mb-2" %>
          <div class="wig-input-wrapper">
            <%= form.text_field :character_name, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent", placeholder: "キャラクター名を入力" %>
          </div>
        </div>

        <!-- ステータス -->
        <div class="mb-8">
          <%= form.label :status, "状態", class: "block text-gray-700 font-medium mb-2" %>
          <div class="wig-input-wrapper">
            <%= form.select :status, 
              options_for_select(Wig.statuses.keys.map { |status| [status.titleize, status] }),
              { prompt: "状態を選択してください" },
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" %>
          </div>
        </div>

        <!-- メモ -->
        <div class="mb-8">
          <%= form.label :memo, "メモ", class: "block text-gray-700 font-medium mb-2" %>
          <div class="wig-input-wrapper">
            <%= form.text_area :memo, rows: 4, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent", placeholder: "メモを入力してください" %>
          </div>
        </div>

        <!-- ボタン -->
        <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-6 mt-12">
          <%= link_to wigs_path, class: "w-full sm:w-auto px-8 py-4 bg-gray-100 text-gray-600 rounded-full hover:bg-gray-200 transition-all duration-300 text-center flex items-center justify-center text-lg font-medium" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            戻る
          <% end %>

          <%= form.submit "登録する", class: "w-full sm:w-auto px-8 py-4 bg-blue-400 text-white rounded-full hover:bg-blue-500 transition-all duration-300 text-center text-lg font-medium" %>
        </div>
      </div>
    <% end %>
  </div>
</div>