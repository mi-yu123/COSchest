<div class="min-h-screen bg-white pb-24">
  <div class="max-w-2xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-semibold text-center mb-8" style="color: rgba(244, 164, 137, 1)">カラコンの編集</h1>

    <%= form_with model: @contact_lens, url: contact_lense_path(@contact_lens), local: true, class: "space-y-6", data: { turbo: false } do |form| %>
      <div class="bg-white p-8 rounded-2xl shadow-lg border" style="border-color: rgba(244, 164, 137, 0.3)">
        <!-- 画像アップロード -->
        <div class="mb-8">
          <%= form.label :image, "画像", class: "form-label" %>
          <p class="text-sm text-gray-500 mb-2">
              jpeg, png形式（5MB以内）
          </p>
          <div class="flex items-center justify-center w-full">
            <label class="w-full flex flex-col items-center px-1 py-2 rounded-lg border-2 border-dashed cursor-pointer transition-colors duration-300" style="background-color: rgba(244, 164, 137, 0.1); border-color: rgba(244, 164, 137, 0.3); color: rgba(244, 164, 137, 1);">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="mt-1 text-xs">クリックして画像を変更</span>
              <%= form.file_field :image, class: "hidden", accept: "image/*" %>
            </label>
          </div>
          
          <% if @contact_lens.image.attached? %>
            <div class="mt-4 text-gray-600">
              現在の画像: <%= @contact_lens.image.filename %>
            </div>
          <% end %>
        </div>

        <!-- カラコン名 -->
        <div class="mb-8">
          <%= form.label :name, "カラコン名", class: "block text-gray-700 font-medium mb-2" %>
          <div class="input-wrapper">
            <%= form.text_field :name, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#F4A489] focus:border-transparent", placeholder: "カラコン名を入力" %>
          </div>
        </div>

        <!-- 使用期限 -->
        <div class="mb-8">
          <%= form.label :expiration_date, "使用期限", class: "block text-gray-700 font-medium mb-2" %>
          <div class="input-wrapper">
            <%= form.month_field :expiration_date, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#F4A489] focus:border-transparent" %>
          </div>
        </div>

        <!-- 枚数 -->
        <div class="mb-8">
          <%= form.label :quantity, "枚数", class: "block text-gray-700 font-medium mb-2" %>
          <div class="input-wrapper">
            <%= form.number_field :quantity, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#F4A489] focus:border-transparent", min: 0 %>
          </div>
        </div>

        <!-- メモ -->
        <div class="mb-8">
          <%= form.label :memo, "メモ", class: "block text-gray-700 font-medium mb-2" %>
          <div class="input-wrapper">
            <%= form.text_area :memo, rows: 4, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#F4A489] focus:border-transparent", placeholder: "メモを入力してください" %>
          </div>
        </div>

        <!-- 更新ボタン -->
        <div class="flex flex-col items-center space-y-4 mt-12">
          <%= form.submit "更新する", class: "w-full sm:w-2/3 px-8 py-4 bg-[#F4A489] text-white rounded-full hover:bg-[#f59577] transition-all duration-300 text-center text-lg font-medium" %>
          
          <!-- 戻るボタン -->
          <div class="w-full flex justify-center mt-6">
            <%= link_to contact_lenses_path, class: "px-8 py-4 bg-gray-100 text-gray-600 rounded-full hover:bg-gray-200 transition-all duration-300 text-center flex items-center justify-center text-lg font-medium" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              戻る
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- 削除ボタン -->
    <div class="w-full border-t border-gray-200 mt-8 pt-8">
      <div class="text-center text-sm text-gray-600 mb-4">削除する場合は以下のボタンを押してください</div>
      <%= button_to contact_lense_path(@contact_lens), 
          method: :delete,
          data: { confirm: '本当に削除しますか？' },
          class: "w-full sm:w-2/3 mx-auto px-8 py-4 bg-red-400 text-white rounded-full hover:bg-red-500 transition-all duration-300 text-center flex items-center justify-center text-lg font-medium" do %>          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        削除する
      <% end %>
    </div>
  </div>
</div>