      <div class="accordion-content hidden px-6 py-4 bg-white">
        <div class="space-y-4">
          <h3 class="font-medium text-gray-900">BLOGの閲覧方法</h3>
          <!-- 画像挿入 -->
          <div class="mb-4">
          <%= image_tag "help6.png", class: "rounded-lg shadow-md max-w-full h-auto", alt: "TOPページガイド" %>
          </div>
