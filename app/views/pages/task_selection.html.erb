<div class="min-h-screen bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    
    <div class="grid grid-cols-2 gap-6 max-w-2xl mx-auto mb-8">
      <%= link_to tasks_path, class: "block" do %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
          <div class="text-xl font-semibold text-center">
            <i class="fas fa-tasks mb-2 text-3xl text-blue-500"></i>
            <div>やること</div>
          </div>
        </div>
      <% end %>

      <%= link_to packing_lists_path, class: "block" do %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
          <div class="text-xl font-semibold text-center">
            <i class="fas fa-suitcase mb-2 text-3xl text-green-500"></i>
            <div>持ち物</div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- 戻るボタン -->
    <div class="text-center">
      <%= link_to root_path, class: "inline-block bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition duration-300" do %>
        <i class="fas fa-arrow-left mr-2"></i>戻る
      <% end %>
    </div>
  </div>
</div>