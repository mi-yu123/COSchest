<%= form_with model: @costume do |form| %>
  <div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">衣装の登録</h2>

    <div>
      <%= form.label :image, "画像", class: "block text-gray-700" %>
      <%= form.file_field :image, class: "mt-1 block w-full text-gray-800" %>
    </div>

    <div>
      <%= form.label :character_name, "キャラクター名", class: "block text-gray-700" %>
      <%= form.text_field :character_name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :status, "状態", class: "block text-gray-700" %>
      <%= form.select :status, options_for_select(Costume.statuses.keys.map { |status| [status.humanize, status] }), { prompt: "状態を選んでください" }, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :memo, "メモ", class: "block text-gray-700" %>
      <%= form.text_area :memo, rows: 4, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mt-6">
      <%= form.submit "登録する", class: "w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>

<%= link_to '戻る', costumes_path, class: "mt-4 inline-block text-blue-600 hover:underline" %>
