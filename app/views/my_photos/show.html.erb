<div class="min-h-screen bg-gray-50 py-8 sm:py-12">
  <div class="container mx-auto px-4 max-w-2xl">
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden border" style="border-color: rgba(248, 113, 113, 0.3)">
      <div class="p-4 sm:p-8">
        <!-- 投稿日時 -->
        <div class="text-sm text-gray-500 mb-4 flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <%= l @my_photo.posted_at, format: :long %>
        </div>

        <!-- タイトル -->
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-6">
          <%= @my_photo.title.presence || "無題" %>
        </h1>

        <!-- 写真 -->
        <div class="mb-8">
          <% if @my_photo.image.attached? %>
            <div class="flex justify-center">
              <div class="relative w-full max-w-lg">
                <%= image_tag @my_photo.image, 
                    class: "w-full h-auto rounded-lg shadow-md object-contain mx-auto",
                    style: "max-height: 70vh;" %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- メモ -->
        <% if @my_photo.memo.present? %>
          <div class="prose max-w-none text-gray-700 mb-8 break-words">
            <%= simple_format @my_photo.memo %>
          </div>
        <% end %>

        <!-- ボタン -->
        <div class="border-t pt-6 mt-8" style="border-color: rgba(248, 113, 113, 0.3)">
          <div class="flex flex-col items-center space-y-4">
            <%= link_to edit_my_photo_path(@my_photo), 
                class: "w-full sm:w-48 px-6 py-3 rounded-full transition-all duration-300 flex items-center justify-center bg-purple-400 text-white hover:bg-purple-500 shadow-sm" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              編集する
            <% end %>

            <%= link_to my_photos_path, 
                class: "w-full sm:w-40 px-4.5 py-2.5 bg-gray-100 text-gray-600 rounded-full hover:bg-gray-200 transition-all duration-300 flex items-center justify-center shadow-sm" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              戻る
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>