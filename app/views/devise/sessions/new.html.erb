<h2 class="text-2xl font-semibold mb-6">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "block text-gray-700 font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded-md" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "block text-gray-700 font-medium" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border border-gray-300 rounded-md" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-gray-700" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "w-full p-3 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <%= link_to "アカウントを作成する", new_user_registration_path, class: "w-full p-3 bg-green-600 text-white rounded-md hover:bg-green-700" %>
</div>

<div class="mt-6 text-center">
  <%= link_to user_twitter_omniauth_authorize_path, class: "w-full p-3 bg-blue-400 text-white rounded-md hover:bg-blue-500" do %>
    <i class="fab fa-twitter mr-2"></i> Xアカウントでログイン
  <% end %>
</div>
